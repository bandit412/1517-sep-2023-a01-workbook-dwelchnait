<!-- collection version dynamic creation-->
@foreach (var meal in mealOptions)
{
    <div class="form-check">
        <input class="form-check-input" type="radio" name="mealRadio" id="@meal" 
                value="@meal"
               checked="@meal == selectedMeal" @onchange="() => SelectMeal(meal)">
        <label class="form-check-label" for="@meal">
            @meal
        </label>
    </div>
}

<br />

<br />
<div class="form-check">
    <input class="form-check-input" type="checkbox" id="exampleCheckbox" 
                @bind="acceptanceBox">
    <label class="form-check-label" for="exampleCheckbox">
        I accept the terms.
    </label>
</div>
